{
  "name": "@effective/prettier-eslint",
  "description": "A leaner and more up-to-date alternative to prettier-eslint.",
  "license": "Apache-2.0",
  "author": "Sebastian Werner <s.werner@sebastian-software.de> (http://sebastian-software.de/werner)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sebastian-software/lean-prettier-eslint.git"
  },
  "version": "1.0.0",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "bin": {
    "prettier-eslint": "bin/prettier-eslint"
  },
  "files": [
    "bin/",
    "dist/"
  ],
  "scripts": {
    "fix": "eslint --fix '**/*.js'",
    "format": "prettier --write '**/*.{js,jsx,ts,tsx,json,md}' && npm run fix",
    "lint": "eslint '**/*.js'",
    "prepare": "preppy",
    "release": "git push && release-it --github.release --npm.publish --non-interactive",
    "release:major": "git push && release-it --github.release --npm.publish --non-interactive --increment major",
    "release:minor": "git push && release-it --github.release --npm.publish --non-interactive --increment minor",
    "test": "jest",
    "watch": "preppy --watch"
  },
  "dependencies": {
    "eslint": "^6.8.0",
    "globby": "^11.0.0",
    "p-queue": "^6.3.0",
    "prettier": "^1.19.1"
  },
  "devDependencies": {
    "@babel/core": "^7.8.7",
    "@babel/plugin-proposal-object-rest-spread": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.8.3",
    "@babel/preset-env": "^7.8.7",
    "@babel/preset-typescript": "^7.8.3",
    "@effective/eslint-config": "^1.4.0",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "lint-staged": "^10.0.8",
    "meow": "^6.0.1",
    "preppy": "^9.3.1",
    "prettier-package-json": "^2.1.3",
    "typescript": "^3.8.3"
  },
  "keywords": [
    "eslint",
    "prettier"
  ],
  "engines": {
    "node": ">=10"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "package.json": [
      "prettier-package-json --write"
    ],
    "**/*.{json,md,yml,yaml}": [
      "prettier --write"
    ],
    "**/*.js": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
