{
  "name": "@effective/prettier-eslint",
  "description": "A leaner and more up-to-date alternative to prettier-eslint.",
  "license": "Apache-2.0",
  "author": "Sebastian Werner <s.werner@sebastian-software.de> (http://sebastian-software.de/werner)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sebastian-software/lean-prettier-eslint.git"
  },
  "version": "1.2.0",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "bin": {
    "prettier-eslint": "bin/prettier-eslint"
  },
  "files": [
    "bin/",
    "dist/"
  ],
  "scripts": {
    "format": "npm run prepare && ./bin/prettier-eslint './**/*.{js,ts}'",
    "lint": "tsc --noEmit && eslint '**/*.ts'",
    "prepare": "preppy",
    "release": "git push && release-it --github.release --npm.publish --non-interactive",
    "release:major": "git push && release-it --github.release --npm.publish --non-interactive --increment major",
    "release:minor": "git push && release-it --github.release --npm.publish --non-interactive --increment minor",
    "test": "jest --silent",
    "watch": "preppy --watch"
  },
  "dependencies": {
    "app-root-path": "^3.0.0",
    "core-js": "^3.6.4",
    "eslint": "^6.8.0",
    "glob-parent": "^5.1.1",
    "globby": "^11.0.0",
    "is-path-inside": "^3.0.2",
    "meow": "^6.1.0",
    "p-queue": "^6.3.0",
    "prettier": "^2.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.9.0",
    "@babel/plugin-transform-runtime": "^7.9.0",
    "@babel/preset-env": "^7.9.0",
    "@babel/preset-typescript": "^7.9.0",
    "@effective/eslint-config": "^2.1.0",
    "@types/app-root-path": "^1.2.4",
    "@types/jest": "^25.1.4",
    "husky": "^4.2.3",
    "jest": "^25.2.1",
    "lint-staged": "^10.0.9",
    "preppy": "^9.3.1",
    "prettier-package-json": "^2.1.3",
    "typescript": "^3.8.3",
    "vscode": "^1.1.36"
  },
  "keywords": [
    "eslint",
    "prettier"
  ],
  "engines": {
    "node": ">=10"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "package.json": [
      "prettier-package-json --write"
    ],
    "**/*.{json,md,yml,yaml}": [
      "prettier --write"
    ],
    "**/*.js": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
