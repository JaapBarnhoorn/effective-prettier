{
  "name": "@effective/prettier",
  "description": "A leaner and more up-to-date alternative to prettier-eslint.",
  "license": "Apache-2.0",
  "author": "Sebastian Werner <s.werner@sebastian-software.de> (http://sebastian-software.de/werner)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sebastian-software/effective-prettier.git"
  },
  "version": "4.0.3",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "bin": {
    "effective-prettier": "bin/effective-prettier"
  },
  "files": [
    "bin/",
    "dist/"
  ],
  "scripts": {
    "format": "npm run prepare && ./bin/effective-prettier './**/*.{js,ts}'",
    "lint": "tsc --noEmit && eslint '**/*.ts'",
    "prepare": "rimraf dist bin && preppy",
    "release": "git push && release-it --ci patch",
    "release:major": "git push && release-it --ci major",
    "release:minor": "git push && release-it --ci minor",
    "test": "jest --silent",
    "watch": "preppy --watch"
  },
  "dependencies": {
    "app-root-path": "^3.0.0",
    "chalk": "^4.0.0",
    "core-js": "^3.6.5",
    "eslint": "^7.2.0",
    "figures": "^3.2.0",
    "glob-parent": "^5.1.1",
    "globby": "^11.0.1",
    "is-path-inside": "^3.0.2",
    "meow": "^7.0.1",
    "p-queue": "^6.4.0",
    "physical-cpu-count": "^2.0.0",
    "prettier": "^2.0.5",
    "stylelint": "^13.6.0"
  },
  "devDependencies": {
    "@babel/core": "^7.10.2",
    "@babel/plugin-proposal-object-rest-spread": "^7.10.1",
    "@babel/plugin-transform-runtime": "^7.10.1",
    "@babel/preset-env": "^7.10.2",
    "@babel/preset-typescript": "^7.10.1",
    "@effective/eslint-config": "^3.6.1",
    "@types/app-root-path": "^1.2.4",
    "@types/jest": "^25.2.3",
    "@types/stylelint": "^9.10.1",
    "@types/vscode": "^1.45.1",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "lint-staged": "^10.2.9",
    "preppy": "^10.5.0",
    "prettier-package-json": "^2.1.3",
    "release-it": "^13.6.2",
    "rimraf": "^3.0.2",
    "stylelint-config-recommended": "^3.0.0",
    "typescript": "^3.9.5"
  },
  "keywords": [
    "eslint",
    "prettier"
  ],
  "engines": {
    "node": ">=10"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "package.json": [
      "prettier --write"
    ],
    "**/*.{json,md,yml,yaml}": [
      "prettier --write"
    ],
    "**/*.js": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
